/* pages/copyGroup/index.wxss */
page {
    height: 100%;
    background-color: #f0f0f0;
}

.wraper {
    height: 100%;
}

.list-wraper {
    background-color: #fff;
    padding: 32rpx;
    margin-top: 20rpx;
}


.list-title {
    color: #333;
    font-size: 30rpx;
}

.list-price-time {
    padding: 30rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-between;    
}

.list-price {
    color: red;
    font-size: 28rpx;
}

.price {
    font-size: 40rpx;
    font-weight: bold;
}


.list-time {
    color: #999;
    font-size: 26rpx;
}

.image-wraper {
    display: flex;
    align-items: center;
}

.list-image {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.list-button {
    margin-top: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background-color:  #0FC7E3;
    border-radius: 10rpx;
    color: #fff;
    font-size: 28rpx;
}

.noMore {
    padding: 30rpx;
    text-align: center;
    font-size: 26rpx;
    color: #999;
}