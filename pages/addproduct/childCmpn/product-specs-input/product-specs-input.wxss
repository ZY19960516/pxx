.specs-input-warper {
    display: flex;
    min-height: 88rpx;
    border-bottom: 2rpx solid #F2F4F7;
    align-items: center;
}

.specs-name {
    font-size: 28rpx;
    color: #242629;
    text-align: left;
    width: 30%;
}


.right {
    flex: 1;
    display: flex;
    align-items: center;
}


.placeholder {
    color: #bfbfbf;
}

.color {
    color:#242629;
}

.specs {
    flex: 1;
}

.add-specs {
    width: 100%;
    font-size: 28rpx;
    padding: 0 8rpx;
}

.more-image {
    width: 13rpx;
    height: 22rpx;
    margin-left: 10rpx;
}