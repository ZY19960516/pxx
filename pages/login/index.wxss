/* pages/login/index.wxss */
page{
    height: 100%;
    width: 100%;
    background-color: #fff;
}

.login-wraper {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header-wraper {
    position: relative;
    width: 100%;
    height: 320rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.header {
    width: 100%;
    height: 266rpx;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
}

.app-name {
    margin-top: 20rpx;
    color: #343434;
    font-size: 30rpx;
}

.icon {
    margin-top: 100rpx;
    width: 140rpx;
    height: 140rpx;
    border-radius: 10rpx;
}

.button {
    /* margin: 230rpx; */
    margin-top: 140rpx;
    width: 80% !important;
    height: 88rpx !important;
    font-size: 30rpx;
    line-height: 88rpx;
    text-align: center;
    background-color: #0FC7E3 !important;
}

.login-later {
    margin-top: 40rpx;
    color: #0FC7E3;
    border: 2rpx solid #0FC7E3;
    width: 80%;
    height:80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10rpx;
}