.bar-wraper {
    padding: 20rpx 0;
    display: flex;
    align-items: baseline
}

.bar-item-wraper {
    width: 20%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.bar-unenable {
    opacity: .5;
}

.bar-image {
    width: 30rpx;
    height: 30rpx;
}

.bar-title {
    padding-top: 10rpx;
    font-size: 22rpx;
    color: #8a8a8a;
}