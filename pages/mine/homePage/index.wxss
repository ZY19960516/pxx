.content {
  background-color: #f5f5f5;
  width: 100%;
  min-height: 100vh;
  padding-top: 20rpx;
}

.content .item {
  width: 90%;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: 20rpx auto;
  padding: 20rpx 20rpx 0 20rpx;
  position: relative;
}

.content .item .cardTop {
  border-bottom: 1px solid #E9E9E9;
}

.content .item .cardTop .cardInfobox {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
}

.content .item .cardTop .cardInfobox .address .addressIcon {
  font-family: "iconfont";
  font-size: 32rpx;
  color: #00c5b8;
  padding-right: 10rpx;
  font-weight: 600;
}

.content .item .cardTop .cardInfobox .address .addr {
  color: #161616;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content .item .cardTop .cardInfobox .cardToset {
  font-family: "iconfont";
  font-size: 32rpx;
  color: #00c5b8;
}

.content .item .cardTop .cardInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-items: flex-start;
  width: 100%;
}

.content .item .cardTop .cardInfo .headpic {
  width: 108rpx;
  height: 108rpx;
  padding: 0 0 40rpx 20rpx;
}

.content .item .cardTop .cardInfo .textareabox {
  width: 78%;
}

.content .item .cardTop .cardInfo .textareabox .name {
  font-size: 28rpx;
  font-weight: bold;
  padding-left: 20rpx;
}

.content .item .cardTop .cardInfo .textareabox textarea {
  width: 100%;
  max-height: 100rpx;
  font-size: 12px;
  padding-left: 20rpx;
}

.content .item .cardTop .cardInfo .editBtn {
  position: absolute;
  top: 126rpx;
  font-family: "iconfont";
  font-size: 32rpx;
  width: 130rpx;
  border-radius: 30rpx;
  background: #00c5b8;
  color: #FFFFFF;
  font-size: 24rpx;
  padding: 5rpx 10rpx;
}

.content .item .cardBottom {
  height: 104rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content .item .cardBottom .sharefriend {
  border-radius: 15rpx;
  color: #00c5b8;
  border: 1px solid #00c5b8;
  padding: 5rpx 8rpx;
  font-size: 14px;
}

.content .item .cardBottom .sharefriend text {
  font-family: "iconfont";
  font-size: 32rpx;
}

.content .item .cardBottom .friend {
  color: #9f9f9f;
}

.content .item .cardBottom .friend .friendnum {
  color: #ff693b;
}

.content .item .cardBottom .friend .moreicon {
  color: #a1a1a1;
  font-family: "iconfont";
  font-size: 32rpx;
}

.content .content-box {
  min-height: 300rpx;
  width: 85%;
  margin: 0px auto;
  background: #FFFFFF;
  border-radius: 10px;
  text-align: center;
  margin-bottom: 20rpx;
  padding: 0 30rpx 10rpx;
}

.content .content-box .item-top {
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1px solid #E9E9E9;
}

.content .content-box .item-top .item-left {
  width: 45%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.content .content-box .item-top .item-left image {
  width: 44rpx;
  height: 44rpx;
}

.content .content-box .item-top .item-left .infoBox .name {
  font-size: 14px;
  font-weight: bold;
}

.content .content-box .item-top .item-left .infoBox .collageNUM {
  font-size: 12px;
}

.content .content-box .item-top .item-right {
  text-align: right;
  height: 100rpx;
  line-height: 100rpx;
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.content .content-box .item-top .item-right .transformborder::after {
  display: block;
  content: '';
  height: 20rpx;
  width: 1px;
  background: linear-gradient(to right, #fff, #c8c7cc);
}

.content .content-box .item-top .item-right text {
  padding: 0 10rpx;
}

.content .content-box .item-bottom .activeName {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  height: 80rpx;
  line-height: 80rpx;
}

.content .content-box .item-bottom .activeName .name {
  font-weight: bold;
}

.content .content-box .item-bottom .activeName .shareBtn {
  border: 1px solid #06B2FA;
  border-radius: 10rpx;
  font-size: 24rpx;
  padding: 0 10rpx;
  height: 40rpx;
  width: 90rpx;
  line-height: 40rpx;
  color: #06B2FA;
}

.content .content-box .item-bottom .activeName .shareBtn .Wxicon {
  font-family: "iconfont";
  text-align: center;
  padding-right: 10rpx;
  font-size: 28rpx;
}

.content .content-box .item-bottom .amount {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 24rpx;
  color: red;
  line-height: 40rpx;
  height: 40rpx;
}

.content .content-box .item-bottom .amount text {
  font-size: 32rpx;
  font-weight: bold;
  vertical-align: top;
}

.content .content-box .item-bottom .activeStatus {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
}

.content .content-box .item-bottom .activeStatus .status {
  color: #06B2FA;
  font-size: 24rpx;
}

.content .content-box .item-bottom .activeStatus .more {
  font-family: "iconfont";
  font-size: 28rpx;
}
