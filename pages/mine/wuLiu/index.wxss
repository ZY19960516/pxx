/* pages/mine/wuLiu/index.wxss */
page {
    height: 100%;
    background-color: #f0f0f0;
}

.wraper {
    background-color: #f0f0f0;
}

.header-wraper {
    margin-top: 10rpx;
    background-color: #fff;
    padding: 32rpx;
}

.wuliu-name {
    color: #242629;
    font-size: 30rpx;
    font-weight: bold;
}

.wuliu-wraper {
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}

.num-name {
    color: #8B8B8B;
    font-size: 28rpx;
    font-weight: 400;
}

.num {
    margin-left: 20rpx;
    color: #242629;
    font-size: 28rpx;
    font-weight: bold;
}

.copy {
    margin-left: 20rpx;
    color: #242629;
    font-size: 26rpx;
    width: 80rpx;
    height: 40rpx;
    border: 2rpx solid #242629;
    line-height: 40rpx;
    text-align: center;
    border-radius: 20rpx;
}

.history-wraper {
    margin-top: 10rpx;
    padding: 32rpx;
    background-color: #fff;
}

.his-item-wraper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
}

.his-item-f {
    align-items: flex-start;
}

.his-time {
    height: 100%;
    width: 160rpx;
    font-size: 26rpx;
    padding-right: 20rpx;
    padding-bottom: 20rpx;
}
.line {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 4rpx;
    left: 180rpx;
}

.circle {
    position: absolute;
    left: 172rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 20rpx;
    height: 20rpx;
    border-radius: 10rpx;
    z-index: 10;
}

.circle-top {
    top: 0;
}

.his-msg {
    font-size: 26rpx;
    width: 480rpx;
    padding: 20rpx 0;
}

.msg-top {
    padding-top: 0;
}

.gray-color {
    color: #cdcdcd;
}

.green-color {
    color: #0FC7E3;
}
.bg-green-color {
    background-color: #0FC7E3;
}

.bg-gray-color {
    background-color: #cdcdcd;
}