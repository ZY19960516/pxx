/* pages/mine/index.wxss */
page{
  height: 100vh;
}
.content {
  background-color: #f5f5f5;
  /* height: 100%; */
  /* overflow: hidden; */
  /* width: 100%;
  min-height: 100vh; */
  overflow-x: hidden;
  overflow-y: auto;
  padding-bottom: 20rpx;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
.content .moreHeight {
  min-height: 290rpx !important;
}

.content .header {
  width: 100%;
  /* background: linear-gradient(#0FC7E3,#ffffff); */
  text-align: center;
  min-height: 230rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  align-items: center;
}
.bgliner {
  background: linear-gradient(#0FC7E3,#ffffff);
}
.content .header .title {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}

.content .header .item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}

.item-left {
  width: 60%;
  display: flex;
  align-items: center;
}
.loginBox {
  height: 100%;
  display: flex;
  align-items: center;
}
.content .header .item .item-left image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.infoBox {
  width: 65%;
  height: 120rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: left;
  margin-left: 20rpx;
  overflow: hidden;
  text-overflow:ellipsis; 
  white-space: nowrap;
}
.name {
  font-size: 28rpx;
  font-weight: bold;
  text-align: left;
}

.collageNum {
  font-size: 24rpx;
}

.item-right {
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goHome {
  font-size: 24rpx;
}

.more {
  font-family: "iconfont";
  font-size: 40rpx;
  text-align: center;
  width: 50rpx;
}
.groupStatusmore {
  font-family: "iconfont";
  font-size: 40rpx;
  text-align: center;
  width: 100rpx;
}
.content .header .item .item-right img {
  width: 20rpx;
  height: 40rpx;
}

.content .money {
  padding: 0 30rpx;
  height: 200rpx;
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-between;
  text-align: center;
  align-items: center;
  line-height: 1.8;
  border-bottom: 1px solid #F2F4F7;
  border-radius: 35rpx 35rpx 0 0;
  margin-top:-20rpx;
}
.borderRight {
  border-right: 1px solid #F2F4F7;
}
.numstyle {
  font-size: 32rpx;
  font-weight: bold;
}

.textstyle {
  font-size: 28rpx;
  padding-top: 20rpx;
}

.moneyBox {
  flex: 1;
}

.Withdrawal {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  width: 60%;
  margin: 20rpx auto 0;
}

.WithdrawalBtn {
  border: 1px solid #06B2FA;
  border-radius: 20rpx;
  font-size: 24rpx;
  width:90rpx;
  text-align: center;
}

.Withdrawalicon {
  font-family: "iconfont";
  font-size: 24rpx;
  text-align: center;
}

.teamBox {
  flex: 1;
}

.tableIcon {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  text-align: center;
  background-color: #FFFFFF;
  /* margin-bottom: 30rpx; */
  padding: 20rpx;
  /* width: 100%; */
}

.item-table {
  width: 25%;
}

.item-table text {
  font-size: 24rpx;
}

.item-table .iconfont {
  font-family: "iconfont";
  font-size: 60rpx;
  text-align: center;
  color: #0FC7E3;
}

.content-box {
  min-height: 200rpx;
  width: 85%;
  margin: 0px auto;
  background: #FFFFFF;
  border-radius: 10px;
  text-align: center;
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx;
}

.activeName {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.activeName .name {
  font-weight: bold;
}

.activeName .shareBtn {
  border: 1px solid #06B2FA;
  border-radius: 10rpx;
  font-size: 24rpx;
  padding: 0 10rpx;
  height: 40rpx;
  width: 90rpx;
  line-height: 40rpx;
  color: #06B2FA;
}
.shareBtn >button {
  border: none;
  outline: none;
  font-size: 24rpx;
  display: inline;
  color: #06B2FA;
  background-color: transparent;
  padding: 0;
  line-height:inherit; 
  border-radius:0;
}
.Wxicon {
  font-family: "iconfont";
  text-align: center;
  padding-right: 10rpx;
  font-size: 28rpx;
}

.item-bottom .amount {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 24rpx;
  color: red;
  line-height: 40rpx;
  height: 40rpx;
}

.content .content-box .item-bottom .amount text {
  font-size: 32rpx;
  font-weight: bold;
  vertical-align: top;
}

.content .content-box .item-bottom .amount .collageing {
  border: 1px solid #06B2FA;
  border-radius: 20rpx;
  font-size: 36rpx;
  height: 60rpx;
  width: 180rpx;
  line-height: 60rpx;
  color: #06B2FA;
  transform: scale(0.5);
}

.content .content-box .item-bottom .numcolor {
  color: #333333;
}

.content .content-box .item-bottom .textpadding {
  padding-left: 20rpx;
}

.content .content-box .item-bottom .moneyInfo {
  font-size: 24rpx;
  color: #999;
  text-align: left;
  height: 40rpx;
  line-height: 40rpx;
}

.content .content-box .item-bottom .collageInfo {
  font-size: 24rpx;
  color: #999;
  text-align: left;
  height: 40rpx;
  line-height: 40rpx;
}

.content .content-box .item-bottom .activeStatus {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
}

.content .content-box .item-bottom .activeStatus .status {
  color: #06B2FA;
  font-size: 24rpx;
}

.content .content-box .item-bottom .activeStatus .more {
  font-family: "iconfont";
  font-size: 28rpx;
}

.uni-status-bar {
  display: block;
  width: 100%;
  /* height: 20px; */
  height: var(--status-bar-height);
}