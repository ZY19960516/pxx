/* pages/mine/index.wxss */
page {
  height: 100%;
  width: 100%;
  background-color: #F4F6F9;
}

.content {
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.iconfont {
  font-family: "iconfont";
  font-size: 30rpx;
  text-align: center;
  z-index: 1;
}
.userInfo {
  width: 90%;
  background: #ffffff;
  /* padding: 0 20rpx; */
  display: flex;
  flex-flow: column;
  margin: 20px auto;
  padding: 0 10px;
  border-radius: 15rpx;
}
.withdrawalBox {
  padding: 10px;
}
.account {
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom:1px solid rgba(36, 38, 42, .2);
  width: 100%;
}
.account >input {
  width: 400rpx;
  font-size: 32rpx;
}
.accounTitle{
  width: 150rpx;
  text-align: left;
  margin-right: 20rpx;
  font-weight: bold;
  font-size: 34rpx;
  /* color: rgba(36, 38, 42, .7); */
}
.borderNone {
  border: none;
}
.withdrawalBtn {
  background: #20BD66;
  color: #ffffff;
  font-size: 32rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  width: 90%;
  margin: 30rpx auto;
  border-radius: 15rpx;
}
.moneyNum {
  font-size: 40rpx;
  font-weight: bold;
}
.enterMoneyAction {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  margin-top: 20px;
  border-bottom: 1px solid rgba(36, 38, 42, .7);
}
.enterMoneyAction >input {
  width: 550rpx;
}
.moneyType {
  font-size: 32rpx;
  font-size: bold;
}
.showMoney {
  height: 80rpx;
  line-height: 80rpx;
  color: #333333;
}
.withdrawalAll {
  color: #20BD66;
  padding-left: 5rpx;
}




