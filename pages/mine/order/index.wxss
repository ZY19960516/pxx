@import '../../../weui/components/weui-wxss/dist/style/weui.wxss';

.search_bar {
  background-color: #f0f0f0;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
.content {
  background-color: #f5f5f5;
  width: 100%;
  /* height: 100%; */
  min-height: 100vh;
  padding-bottom: 60rpx;
  box-sizing: border-box;
  overflow-y: scroll;
  position: relative;
}
.orderBox {
  padding-bottom: 20rpx;
}
.iconfont {
  font-family: "iconfont";
  font-size: 30rpx;
  text-align: center;
}
.selectDateBox {
  font-size: 28rpx;
  color: #878889;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  background: #ffffff;
  position: relative;
  border-bottom: 1px solid #ececec;
}
.textNamol{
  color: #333333;
}
  /* margin-left: 40rpx; */
.activeText {
  color: #07c160;
  position: relative;
}
.activeText::after {
  content: '';
  width: 54rpx;
  height: 8rpx;
  position: absolute;
  bottom: -22rpx;
  left: 50%;
  transform: translate(-50%);
  background: #07c160;
  border-radius: 4px;
}
.verificationBtn {
  background: #07c160;
  border-radius: 15rpx 15rpx 0 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  position: fixed;
  bottom: 0;
  width: 100%;
  color: #ffffff;
}
.nomore {
  text-align: center;
  position: absolute;
  height: 60rpx;
  line-height: 60rpx;
  left: 50%;
  bottom: 0;
  transform: translate(-50%);
  width: 100%;
  color: #454545;
  font-size: 26rpx;
}