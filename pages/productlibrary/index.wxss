/* pages/productlibrary/index.wxss */
page{
    height: 100%;
    width: 100%;
    background-color: #fff;
}

.library-wraper {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.header {
    height: 110rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.content {
    flex: 1;
    display: flex;
}

.left {
    width: 20%;
    height: 100%;
    background-color: #F2F4F7;
}

.right {
    width: 80%;
    height: 100%;
    color: #fff;
    background-color: #fff;
}

.footer {
    height: calc(80rpx + env(safe-area-inset-bottom));
    display: flex;
    align-items: center;
    background-color: #fff;
    border-top: 2rpx solid rgba(224,225,225,0.6);
    padding-bottom: env(safe-area-inset-bottom)
}

.total-count {
    flex: 1;
    text-align: right;
    color: #242629;
}

.text {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
}

.select-count {
    color: #0FC7E3;
    padding: 0 5rpx;
}

.confirm-btn {
    background-color: #0FC7E3;
    color: #fff;
    width: 250rpx;
}