.product-add {
    flex: 1;
    border: 2rpx solid #0FC7E3;
    height: 70rpx;
    width: 700rpx;
    border-radius: 24rpx;
    margin: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.add-image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.add-text {
    color: #0FC7E3;
    font-size: 30rpx;
}
