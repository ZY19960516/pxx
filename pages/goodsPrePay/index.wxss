/* pages/goodsPrePay/index.wxss */
page{
    height: 100%;
    background-color: #F4F4F4;
}
.box {
    position: relative;
    height: 100%;
    width: 100%;
    display: flex;
    padding-bottom: 120rpx;
    flex-direction: column;
}

.address {
    background-color: white;
    display: flex;
    padding: 30rpx;
    align-items: center;
}

.address .left {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.address .name {
    color: #343434;
    font-size: 35rpx;
    font-weight: 550;
}

.phone {
    margin-left: 60rpx;
}

.address .location {
    font-size: 29rpx;
    font-weight: 400;
    color: #343434;
    padding-top: 20rpx;
}

.address image {
    width: 13rpx;
    height: 24rpx;
}

.goods_box {
    margin: 20rpx 0;
    background-color: white;
}

.goods-item {
    width: 100%;
    padding: 20rpx;
    border-bottom: 2rpx solid #F7F7F7;
    display: flex;
}

.goods-img {
    width: 180rpx;
    height: 180rpx;
    margin-top: 8rpx;
}

.goods-item .counter_box {
    display: flex;
}

.counter {
    margin-right: 30rpx;
    margin-left: auto;
}

.goods-text {
    flex: 1;
    display: flex;
    padding-left: 15rpx;
    flex-direction: column;
    justify-content: space-between;
}

.goods-desc {
    color: #A4A4A4;
    font-size: 28rpx;
    padding-top: 10rpx;
    padding-bottom: 12rpx;
}

.goods-price {
    flex: 1;
    font-size: 34rpx;
}

.goods_total_price {
    display: flex;
    padding: 16rpx;
    font-size: 30rpx;
    align-items: center;
}

.goods_total_price .text1 {
    flex: 1;
}

.goods_total_price .text2 {
    display: flex;
}

.goods_total_price .total_num {
    flex: 1;
    font-size: 28rpx;
    padding-right: 5rpx;
    text-align: end;
}
.goods_total_price .total_price {
    font-size: 34rpx;
    font-weight: bold;
    color: #FF6722;
}

.bottom_box {
    height: 120rpx;
    position: fixed;
    width: 100%;
    z-index: 100;
    bottom: 0rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: white;
}

.buy {
    font-size: 36rpx;
    color: white;
    text-align: center;
    align-items: center;
    flex: 1;
    height: 120rpx;
    line-height: 120rpx;
    background-color: #07C160;
}

.text-total {
    color: #181818;
    font-size: 30rpx;
    padding-left: 16rpx;
}

.goods-price-big {
    flex: 1;
    font-size: 40rpx;
    font-weight: bold;
    color: #FF6722;
}