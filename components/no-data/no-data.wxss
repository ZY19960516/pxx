.wraper {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    justify-content: center;
    height: 100%;
    /* position: relative; */
    min-height: 490rpx;
}

.image {
    width: 160rpx;
    height: 160rpx;
}

.alert {
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #cdcdcd;
}

.btn {
    margin-top: 40rpx;
    background-color:#0FC7E3;
    width: 200rpx;
    height: 70rpx;
    border-radius: 35rpx;
    font-size: 30rpx;
    color: #fff;
    line-height: 70rpx;
    text-align: center;
}

