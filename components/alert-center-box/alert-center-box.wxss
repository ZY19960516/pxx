/* components/alert-center-box/alert-center-box.wxss */
.tag-alert-wraper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5);
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
}

.content {
    background-color: #fff;
    border-radius:20rpx;
    overflow: hidden;
    position: relative;
    width: 90%;
    margin-bottom: 200rpx;
}

.bottom-btn {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 32rpx 32rpx 50rpx;
}

.btn {
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    width: 40%;
    font-size: 26rpx;
    border-radius: 35rpx;
}

.cancel {
    border: 2rpx solid #838C9B;
    color: #242629;
}

.ok {
    color: #fff;
    background-color: #0FC7E3;
}

.single-bottom-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-bottom: 50rpx;
}

.single-btn {
    width: 60%;
}