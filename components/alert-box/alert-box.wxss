/* components/alert-box/alert-box.wxss */

.tag-alert-wraper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5);
    z-index: 10000;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.content {
    background-color: #fff;
    border-radius:20rpx 20rpx 0rpx 0rpx;
    overflow: hidden;
    position: relative;
}
.content-header {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 90rpx;
    border-bottom: 2rpx solid #F2F4F7;
}

.header-item {
    width: 120rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 30rpx;
}

.header-cancel {
    color: #BDC5CF;
}

.header-ok {
    color: #27C7E1;
}

.title {
    flex: 1;
    text-align: center;
    font-size: 28rpx;
    color: #212325;
}

.close {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 35rpx;
    right:32rpx
}